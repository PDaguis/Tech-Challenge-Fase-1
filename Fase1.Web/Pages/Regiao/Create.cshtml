@page
@model Fase1.Web.Pages.Regiao.CreateModel
@{
    ViewData["Title"] = "Cadastrar - Regiões";
}

<h1>Cadastrar</h1>

<h4>Região</h4>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Regiao.Nome" class="control-label"></label>
        <input asp-for="Regiao.Nome" class="form-control" />
        <span asp-validation-for="Regiao.Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Regiao.DDD" class="control-label"></label>
        <input asp-for="Regiao.DDD" class="form-control" />
        <span asp-validation-for="Regiao.DDD" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

<div class="mt-3">
    <a asp-page="/Index">Voltar para regiões</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


